{
  "name": "love-retold-recording-app",
  "version": "1.0.0",
  "private": true,
  "description": "Love Retold Story Recording Web Application",
  "dependencies": {
    "@ebay/nice-modal-react": "^1.2.13",
    "@radix-ui/react-dialog": "^1.1.15",
    "@sentry/react": "^10.22.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "audiomotion-analyzer": "^4.5.1",
    "firebase": "^10.4.0",
    "firebase-admin": "^11.11.0",
    "plyr": "^3.7.8",
    "progressbar.js": "^1.1.1",
    "prop-types": "^15.8.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-confetti": "^6.2.2",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-router-dom": "^6.28.2",
    "react-scripts": "5.0.1",
    "vaul": "^1.1.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "set HOST=0.0.0.0&& react-scripts start",
    "build": "react-scripts build",
    "build:dev": "react-scripts build",
    "build:staging": "set GENERATE_SOURCEMAP=hidden&& react-scripts build",
    "build:prod": "set GENERATE_SOURCEMAP=hidden&& react-scripts build && npm run archive:sourcemaps",
    "archive:sourcemaps": "if not exist \".sourcemaps\" mkdir \".sourcemaps\" && copy build\\static\\js\\*.map .sourcemaps\\ 2>nul || echo No source maps to archive",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "predeploy": "npm run test:ci && npm run build:prod",
    "predeploy:staging": "npm run test:ci && npm run build:staging",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:firebase": "firebase deploy",
    "deploy:staging": "npm run predeploy:staging && firebase use staging && firebase deploy",
    "deploy:prod": "npm run predeploy && firebase use default && firebase deploy",
    "emulate": "firebase emulators:start",
    "emulate:with-ui": "firebase emulators:start --enable-ui",
    "emulate:storage": "firebase emulators:start --only storage,auth",
    "firebase:init": "firebase init",
    "test:emulator": "cross-env REACT_APP_USE_EMULATOR=true npm run test:ci",
    "test:integration": "cross-env REACT_APP_USE_FIREBASE=true REACT_APP_USE_EMULATOR=true npm run test:ci",
    "test:e2e:local": "playwright test --config=playwright.config.js",
    "test:e2e:headed": "playwright test --config=playwright.config.js --headed",
    "test:e2e:debug": "playwright test --config=playwright.config.js --debug",
    "start:emulator-mode": "cross-env REACT_APP_USE_FIREBASE=true REACT_APP_USE_EMULATOR=true npm start"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "cross-env": "^7.0.3",
    "firebase-tools": "^12.6.0",
    "web-streams-polyfill": "^4.2.0",
    "whatwg-fetch": "^3.6.20"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
