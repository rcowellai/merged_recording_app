# ============================================================================
# UIAPP Firebase Environment Configuration - PRODUCTION READY (C05 FIXED)
# ============================================================================
#
# IMPORTANT: Copy this to .env.local and fill in actual Firebase values
# Get these from Firebase Console → Project Settings → General
#
# ============================================================================

# Firebase Configuration (REQUIRED for C05 functionality)
REACT_APP_FIREBASE_API_KEY=your_actual_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=love-retold-webapp.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=love-retold-webapp
REACT_APP_FIREBASE_STORAGE_BUCKET=love-retold-webapp.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
REACT_APP_FIREBASE_APP_ID=your_app_id_here
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Feature Flags (ENABLE for C05)
REACT_APP_USE_FIREBASE=true
REACT_APP_FIREBASE_AUTH_ENABLED=true
REACT_APP_FIREBASE_STORAGE_ENABLED=true
REACT_APP_SESSION_VALIDATION_ENABLED=true

# Application Environment
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=true
REACT_APP_STORAGE_TYPE=firebase

# Firebase Emulator Configuration (for local testing)
REACT_APP_USE_EMULATOR=false
REACT_APP_EMULATOR_AUTH_URL=http://localhost:9099
REACT_APP_EMULATOR_FIRESTORE_URL=http://localhost:8080
REACT_APP_EMULATOR_FUNCTIONS_URL=http://localhost:5001
REACT_APP_EMULATOR_STORAGE_URL=http://localhost:9199